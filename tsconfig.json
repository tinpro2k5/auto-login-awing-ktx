{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "playwright",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["playwright/**/*"],
  "exclude": ["node_modules", "dist"]
}
